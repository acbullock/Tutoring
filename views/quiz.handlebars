<!--Layout for the bindex view -->

<!--Page Header-->
<div class="container">
  <h1>Quiz</h1>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>Subject: {{quiz.subject}}</h3>
      <h3>Topic: {{quiz.topic}}</h3> 
      
    </div>
    <div class="col-md-12">
      {{#each problems}}
           <strong> <hr></strong>
           <img src="{{this.question}}" alt="Question">
           <p><br>
           {{this.choices}}</p>
           <br>
           <select id="prob-{{this.id}}" class="custom-select">
  <option selected>Select your answer:</option>
  <option value="A">A</option>
  <option value="B">B</option>
  <option value="C">C</option>
  <option value="D">D</option>
</select>
  <br><br><br>
  <hr>
        {{/each}}

    </div>
    <div class="col-md-12">
      
     <a class="btn btn-info" href="/lessons/{{quiz.LessonId}}">Go Back to the Lesson</a>   
        <a class="btn btn-warning" action="/quizzes/{{quiz.id}}" method="POST">Submit Quiz!</a> 

    </div>

  </div>
</div>





